<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/pharmacy_send_width"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    android:layoutDirection="rtl"
    app:cardCornerRadius="@dimen/_5sdp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/pharmacy_send_width"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/pharmacy_image"
            android:layout_width="@dimen/pharmacy_send_width"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/ic_medicine"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/product_name_container"
            android:layout_width="@dimen/pharmacy_send_width"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="اسم المنتج:"
                android:textSize="@dimen/_15ssp"/>
            <TextView
                android:id="@+id/therapy_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/_15ssp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/therapy_number_container"
            android:layout_width="@dimen/pharmacy_send_width"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="العدد المطلوب:"
                android:textSize="@dimen/_15ssp"/>
            <TextView
                android:id="@+id/therapy_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_15ssp"/>
            <TextView
                android:id="@+id/therapy_item_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/_15ssp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/accept_alternative_container"
            android:layout_width="@dimen/pharmacy_send_width"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="يقبل البديل:"
                android:textSize="@dimen/_15ssp"/>
            <TextView
                android:id="@+id/accept_alternative"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/_15ssp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/description_container"
            android:layout_width="@dimen/print_width"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top|start"
            android:layout_margin="@dimen/_5sdp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ملاحظات:"
                android:textSize="@dimen/_15ssp"/>
            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="@dimen/_15ssp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>